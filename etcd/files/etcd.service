[Unit]
Description=etcd
Documentation=https://github.com/coreos

[Service]
ExecStart=/usr/local/bin/etcd \\
  --name $(curl http://169.254.169.254/latest/meta-data/local-hostname) \\
  --cert-file=/etc/etcd/kubernetes.pem \\
  --key-file=/etc/etcd/kubernetes-key.pem \\
  --peer-cert-file=/etc/etcd/kubernetes.pem \\
  --peer-key-file=/etc/etcd/kubernetes-key.pem \\
  --trusted-ca-file=/etc/etcd/ca.pem \\
  --peer-trusted-ca-file=/etc/etcd/ca.pem \\
  --peer-client-cert-auth \\
  --client-cert-auth \\
  --initial-advertise-peer-urls https://$(curl http://169.254.169.254/latest/meta-data/local-ipv4):2380 \\
  --listen-peer-urls https://$(curl http://169.254.169.254/latest/meta-data/local-ipv4):2380 \\
  --listen-client-urls https://$(curl http://169.254.169.254/latest/meta-data/local-ipv4):2379,https://127.0.0.1:2379 \\
  --advertise-client-urls https://$(curl http://169.254.169.254/latest/meta-data/local-ipv4):2379 \\
  --initial-cluster-token etcd-cluster-0 \\
  --discovery https://discovery.etcd.io/4487f270f9bf5e3e2abd98ef711d72c8 \\
  --initial-cluster-state new \\
  --data-dir=/var/lib/etcd
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target